  {title: 'Walloon', value: 'wa'},
  {title: 'Welsh', value: 'cy'},
  {title: 'Yoruba', value: 'yor'}
]

const questions = [
  {
    type: 'text',
    name: 'themeName',
    message: 'What will your theme name be?',
    initial: 'MD Starter',
    validate: value => value.trim().length > 0
  },
  {
    type: 'text',
    name: 'authorName',
    message: 'Who is the author of this theme (used in the style.css of the theme)?',
    initial: 'MD',
    validate: value => value.trim().length > 0
  },
  {
    type: 'text',
    name: 'authorURI',
    message: 'Any website for the author of this theme?',
    initial: 'https://wearemd.com',
    validate: value => isUrl(value)
  },
  {
    type: 'autocomplete',
    name: 'wpLocale',
    message: 'In which language would you like to download WordPress?',
    choices: wpAvailableLocales,
    initial: wpAvailableLocales.map(e => e.value).indexOf(wpDefaultLocale),
    validate: value => wpAvailableLocales.includes(value)
  }
];

(async () => {
  const {themeName, authorName, authorURI, wpLocale} = await prompts(questions)

  // Interrupt here if one of the value above is undefined
  if ([themeName, authorName, authorURI, wpLocale].some(e => e == undefined)){
    console.log(`‚ùå Theme creation aborted`)

    return false
  }

  const themeNameSlug = slugify(themeName)

  // Write all informations related to your theme in app/wp-content/themes/md-starter/style.css:
  const themeStyleCSS =
    '/**\n' +
    ` * Theme Name: ${themeName}\n` +
    ` * Author: ${authorName}\n` +
    ` * Author URI: ${authorURI}\n` +
    ' * Version: 1.0.0\n' +
    ` * Text Domain: ${themeNameSlug}\n` +
    ' */\n'

  fs.writeFileSync(path.resolve(__dirname, 'app/wp-content/themes/md-starter/style.css'), themeStyleCSS)

  // Set default language used for this WordPress installation
  await replaceInFile({
    files: 'Makefile',
    from: new RegExp(wpDefaultLocale, 'g'),
    to: wpLocale
  })

  // Rename every occurrence of `md-starter` in the parent folder (except in `README.md`) using your **`theme-name`**.
  await replaceInFile({
    files: [
      '*',
      '.*',
      '**/*'
    ],
    ignore: [
      'README.md',
      'install.js',
      '**/fonts/**',
      '**/images/**',
      'node_modules/**'
    ],
    from: /md-starter/g,
    to: themeNameSlug,
  })

  // Rename app/wp-content/themes/md-starter and app/wp-content/themes/md-starter/languages/md-starter.pot using your **`theme-name`**.
  fs.renameSync(
    path.resolve(__dirname, 'app/wp-content/themes/md-starter/languages/md-starter.pot'),
    path.resolve(__dirname, `app/wp-content/themes/md-starter/languages/${themeNameSlug}.pot`)
  )
  fs.renameSync(
    path.resolve(__dirname, 'app/wp-content/themes/md-starter'),
    path.resolve(__dirname, `app/wp-content/themes/${themeNameSlug}`)
  )

  console.log(`üèÅ Your theme '${themeName}' is ready!`)
})();
